{
  "format_version": "1.8.0",
  "minecraft:spawn_rules": {
    "description": {
      "identifier": "atmosphere:bird_red",
      "population_control": "animal"
    },

    "conditions": [
      {    
        "minecraft:spawns_on_surface": {},
        "minecraft:spawns_on_block_filter": "minecraft:leaves",
        "minecraft:brightness_filter": {
          "min": 7,
          "max": 15,
          "adjust_for_weather": false
        },
        "minecraft:herd": {
          "min_size":1,
          "max_size":3
        },
 
        "minecraft:weight": {
          "default": 25
        },
        
        "minecraft:density_limit": {
          "surface": 3  
        },
    
        "minecraft:biome_filter": { 
          "test": "has_biome_tag", "operator":"==", "value": "river",
          "test": "has_biome_tag", "operator":"==", "value": "forest",  
          "test": "has_biome_tag", "operator":"==", "value": "jungle",
          "test": "has_biome_tag", "operator":"==", "value": "roofed_forest", 
          "test": "has_biome_tag", "operator":"==", "value": "birch_forest"
        }
      }
    ]
  }
}