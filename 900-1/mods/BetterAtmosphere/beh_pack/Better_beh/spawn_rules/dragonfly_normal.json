          "min": 7,
          "max": 15,
          "adjust_for_weather": false
        },
        "minecraft:herd": {
          "min_size":1,
          "max_size":3
        },
 
        "minecraft:weight": {
          "default": 25
        },
        
        "minecraft:density_limit": {
          "surface": 6  
        },
        "minecraft:biome_filter": { 
          "test": "has_biome_tag", "operator":"==", "value": "river",
          "test": "has_biome_tag", "operator":"==", "value": "flower_forest",
          "test": "has_biome_tag", "operator":"==", "value": "beach"
        }
      }
    ]
  }
}