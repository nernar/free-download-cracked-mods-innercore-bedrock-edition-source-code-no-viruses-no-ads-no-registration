{
  "format_version": "1.16.100",
  "minecraft:entity": {
    "description": {
      "identifier": "bioplentia:butterfly",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },

    "component_groups": {
      "bioplentia:menelaus_blue_morpho": {
        "minecraft:variant": { "value": 0 }
      },
      "bioplentia:cabbage_white": {
        "minecraft:variant": { "value": 1 }
      },
      "bioplentia:green_hairstreak": {
        "minecraft:variant": { "value": 2 }
      },
      "bioplentia:cloudless_sulphur": {
        "minecraft:variant": { "value": 3 }
      },
      "bioplentia:julia": {
        "minecraft:variant": { "value": 4 }
      },
      "bioplentia:purple_emperor": {
        "minecraft:variant": { "value": 5 }
      },
      "bioplentia:red_admiral": {
        "minecraft:variant": { "value": 6 }
      },

      "bioplentia:adult": {
         "minecraft:experience_reward": {
          "on_bred": "Math.Random(1,1)",
          "on_death": "query.last_hit_by_player ? Math.Random(1,1) : 0"
        },
        "minecraft:loot": {
          "table": "loot_tables/empty.json"
        }
      },

      "bioplentia:look_for_food": {
         "minecraft:behavior.move_to_block": {
           "priority": 10,
           "tick_interval": 1,
           "start_chance": 0.5,
           "search_range": 6,
           "search_height": 4,
           "goal_radius": 1.0,
           "stay_duration": 20.0,
           "target_selection_method": "random",
           "target_offset": [0, 0.25, 0],
           "target_blocks": [
             "minecraft:red_flower",    
             "minecraft:yellow_flower", 
             "minecraft:wither_rose",
             "minecraft:sweet_berry_bush",
             "minecraft:double_plant:8",
             "minecraft:double_plant:9", 
             "minecraft:double_plant:12",
             "minecraft:double_plant:13",
             "bioplentia:red_daisy",
             "bioplentia:mistletoe",
             "bioplentia:white_daisy",
             "bioplentia:vanilla_vine",
             "bioplentia:bluebells"
           ],
           "on_stay_completed": [
             {
               "event": "bioplentia:collected_nectar",
               "target": "self"
               }
             ]
           },
           "minecraft:timer": {
             "looping": true,
             "time": 180,
             "time_down_event": {
               "event": "bioplentia:find_target_timeout"
              }
            }
         },

       "bioplentia:waiting": {

         "minecraft:timer": {
           "looping": true,
           "time": 90,
           "time_down_event": {
             "event": "bioplentia:waiting_timeout"
             }
           }
        },

         "bioplentia:has_nectar": {
            "minecraft:is_charged": {},
            "minecraft:grows_crop": {
              "charges": 10,
              "chance": 0.03
           }
        }
    },


    "components": {
      "minecraft:type_family": {
           "family": [ "butterfly", "ambient" ]
       },

       "minecraft:behavior.tempt": {
         "priority": 5,
         "speed_multiplier": 1.25,
         "within_radius": 8,
         "can_tempt_vertically": true,
         "items": [
           "bioplentia:vanilla_sticks"
         ]
       },
       "minecraft:behavior.random_hover": {
          "priority": 12,
          "xz_dist": 8,
          "y_dist": 8,
          "y_offset": 1,
          "interval": 1,
          "hover_height": [2, 2]
       },
       "minecraft:despawn": {
         "despawn_from_distance": {}
       },
       "minecraft:behavior.float": {
         "priority": 19
       },
       "minecraft:breathable": {
         "totalSupply": 15,
         "suffocateTime": 0
       },
       "minecraft:collision_box": {
          "width": 0.275,
          "height": 0.25
        },

        "minecraft:follow_range": {
           "value": 512
        },
        "minecraft:damage_sensor": {
          "triggers": {
            "cause": "fall",
            "deals_damage": false
         }
       },
       "minecraft:hurt_on_condition": {
         "damage_conditions": [
         {
           "filters": {
             "test": "in_lava",
             "subject": "self",
             "operator": "==",
             "value": true
            },
            "cause": "lava",
            "damage_per_tick": 5
          },
         {
           "filters": {
             "test": "in_water",
             "subject": "self",
             "operator": "==",
             "value": true
            },
            "cause": "lava",
            "damage_per_tick": 5
          }
        ]
      },
      "minecraft:movement": {
         "value": 0.3
      },
      "minecraft:flying_speed": {
        "value": 0.2
      },
      "minecraft:behavior.avoid_mob_type": {
        "priority": 4,
        "entity_types":[
          {
            "filters": { "test" :  "is_family", "subject" : "other", "value" :  "player"},
            "max_dist": 4,
            "walk_speed_multiplier": 0.3,
            "sprint_speed_multiplier": 0.4
          },
          {
            "filters": { "test" :  "is_family", "subject" : "other", "value" :  "bee"},
            "max_dist": 4,
            "walk_speed_multiplier": 0.3,
            "sprint_speed_multiplier": 0.4
          }
        ]
      },
      "minecraft:navigation.hover": {
        "can_path_over_water": false,
        "can_sink": false,
        "can_pass_doors": false,
        "can_path_from_air": true,
        "avoid_water": true,
        "avoid_damage_blocks": true,
        "avoid_sun": false
      },
      "minecraft:movement.hover": {},
      "minecraft:jump.static": {},
      "minecraft:can_fly": {},
      "minecraft:health": {
          "value": 5,
          "max": 5
       },
       "minecraft:nameable": {},

       "minecraft:physics": {},
       "minecraft:pushable": {
         "is_pushable": true,
         "is_pushable_by_piston": true
       },
       "minecraft:conditional_bandwidth_optimization": {
       }
    },

    "events": {
     "bioplentia:find_target_timeout": {
       "remove": {
         "component_groups": [
           "bioplentia:look_for_food"
          ]
        },
        "add": {
          "component_groups": [
            "bioplentia:waiting"
         ]
       }
     },
     "bioplentia:waiting_timeout": {
       "remove": {
         "component_groups": [
           "bioplentia:waiting"
          ]
        },
        "add": {
          "component_groups": [
            "bioplentia:look_for_food"
         ]
       }
     },
     "bioplentia:collected_nectar": {
         "remove": {
            "component_groups": [
               "bioplentia:look_for_food"
             ]
          },
          "add": {
            "component_groups": [

            "bioplentia:has_nectar"
          ]
        }
      },
      "minecraft:entity_spawned": {
       "sequence": [
        {
         "randomize": [
          {
            "weight": 20,
            "add": {
              "component_groups": [
                "bioplentia:menelaus_blue_morpho",
                "bioplentia:adult"
              ]
            }
          },
          {
            "weight": 20,
            "add": {
              "component_groups": [
                "bioplentia:cabbage_white",
                "bioplentia:adult"
              ]
            }
          },
          {
            "weight": 20,
            "add": {
              "component_groups": [
                "bioplentia:green_hairstreak",
                "bioplentia:adult"
              ]
            }
          },
          {
            "weight": 20,
            "add": {
              "component_groups": [
                "bioplentia:cloudless_sulphur",
                "bioplentia:adult"
              ]
            }
          },
          {
            "weight": 20,
            "add": {
              "component_groups": [
                "bioplentia:julia",
                "bioplentia:adult"
              ]
            }
          },
          {
            "weight": 20,
            "add": {
              "component_groups": [
                "bioplentia:purple_emperor",
                "bioplentia:adult"
              ]
            }
          },
          {
            "weight": 10,
            "add": {
              "component_groups": [
                "bioplentia:red_admiral",
                "bioplentia:adult"
              ]
            }
          }
        ]
        },
        {
          "add": {
           "component_groups": [
             "bioplentia:look_for_food"
            ]
          }
        }
       ]
      }
 
    }
  }
