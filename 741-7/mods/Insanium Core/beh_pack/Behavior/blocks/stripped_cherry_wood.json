			},
			"up": {
			  "texture": "stripped_cherry_log_side",
			  "render_method": "opaque",
	        "ambient_occlusion": true
			},
			"down": {
		     "texture": "stripped_cherry_log_side",
			  "render_method": "opaque",
	        "ambient_occlusion": true
		  }
   	},
     "minecraft:geometry": "geometry.core.block.cube",
