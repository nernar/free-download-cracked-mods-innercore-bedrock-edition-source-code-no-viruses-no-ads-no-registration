{
  "namespace": "debug_screen",

  "access_button@common_buttons.light_content_button": {
    "$pressed_button_name": "button.access",
    "size": [ 20, 20 ],
    "offset": [ 20, 20 ],
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "focus_enabled": false,
    "bindings": [
      {
        "binding_name": "#access_screen_visible",
        "binding_name_override": "#visible"
      }
    ]
  },

  "special_render": {
    "type": "custom",
    "renderer": "debug_screen_renderer"
  },

  "content_panel": {
    "type": "panel",
    "clips_children": false,
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "access_button@debug_screen.access_button": {
        }
      },
      {
        "special_render@debug_screen.special_render": {
        }
      },
      {
        "special_text@debug_screen.mAPITextRender": {
        }
      }
    ]
  },


  //#Indef
  //mAPI render
  "mAPITextRender@config_core.meta": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "anchor_to": "bottom_right",
    "anchor_from": "bottom_right",
    "controls": [
    {
       "projectIssues@debug_screen.mAPIKnownIssues": {
       }
     },
     {
       "projectName": {
         "type": "label",
         "text": "$name",
         "shadow": true,
         "visible": "$creatorMode",
         "size": [ "100%", "100%" ],
         "offset": [ "0%", "5%" ]
        }
      },
      {
       "projectVersion": {
         "type": "label",
         "text": "$version",
         "shadow": true,
         "visible": "$creatorMode",
         "size": [ "100%", "100%" ],
         "offset": [ "0%", "10%" ]
        }
      },
      {
        "projectCreatorMode": {
          "type": "label",
          "text": "Creator mode: active",
          "shadow": true,
          "visible": "$creatorMode",
          "size": [ "100%", "100%" ],
          "offset": [ "0%", "15%" ]
         }
       }  
    ]
  },

  "mAPIKnownIssues": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "offset": [ "0%", "0%" ],
    "controls": [
    {
       "customBiomesPocket": {
        "type": "label",
        "visible": "$pocket_edition",
        "shadow": true,
        "size": [ "100%", "100%" ]
       }
     }
    ]
  },

  //#Endif

  "debug_screen@common.base_screen": {
    "send_telemetry": false,
    "screen_not_flushable": true,
    "render_game_behind": true,
    "is_showing_menu": false,
    "low_frequency_rendering": true,
    "is_modal": true,
    "should_steal_mouse": false,
    "render_only_when_topmost": false,
    "screen_draws_last": true,
    "always_accepts_input": true,
    "$screen_content": "debug_screen.content_panel",
    "$screen_animations": [],
    "$use_loading_bars": false
  }
}