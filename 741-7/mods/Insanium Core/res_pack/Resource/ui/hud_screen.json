{
  "advancement_animation_in_0":{
    "anim_type":"offset",
    "easing":"linear",
    "duration":0.6,
    "from":[ "14% + 180px", 0 ],
    "to":[ "21%", 0 ],
    "next":"@hud.advancement_animation_in_1"
  },
  "advancement_animation_in_1":{
    "anim_type":"offset",
    "easing":"linear",
    "duration":0.4,
    "from":[ "21%", 0 ],
    "to":[ 0, 0 ],
    "next":"@hud.advancement_animation_stay"
  },
  "advancement_animation_stay":{
    "anim_type":"wait",
    "duration":5.4,
    "next":"@hud.advancement_animation_out_0"
  },
  "advancement_animation_out_0":{
    "anim_type":"offset",
    "easing":"linear",
    "duration":0.4,
    "from":[ 0, 0 ],
    "to":[ "21%", 0 ],
    "next":"@hud.advancement_animation_out_1"
  },
  "advancement_animation_out_1":{
    "anim_type":"offset",
    "easing":"linear",
    "duration":0.6,
    "from":[ "21%", 0 ],
    "to":[ "14% + 180px", 0 ],
    "destroy_at_end":"hud_title_text"
  },
  "hud_actionbar_text":{
    "type":"image",
    "size":[ "100%c + 12px", "100%c + 5px" ],
    "offset":[ 0, "50%-68px" ],
    "texture":"textures/ui/hud_tip_text_background",
    "alpha":"@hud.anim_actionbar_text_background_alpha_out",
    "controls":[
      {
        "actionbar_message":{
          "type":"label",
          "anchor_from":"center",
          "anchor_to":"center",
          "color":"$tool_tip_text",
          "layer":1,
          "text":"$actionbar_text",
          "localize":false,
          "alpha":"@hud.anim_actionbar_text_alpha_out"
        }
      }
    ],
    "ignored":true
  },
  "hud_title_text":{
    "type":"stack_panel",
    "orientation":"vertical",
    "size":[ "100%c", "100%c" ],
    "anchor_from":"top_right",
    "anchor_to":"top_right",
    "alpha":1.0,
    "propagate_alpha":true,
    "offset":"@hud.advancement_animation_in_0",
    "variables":[
      
    ],
    "controls":[
      {
        "advancement_content@hud.toast_advancement":{
          "$actionbar_text|default":"textures/advancement/icons/default"
        }
      }
    ]
  },
  "toast_advancement":{
    "type":"image",
    "size":[ "1%c + 180px", "1%c + 36px" ],
    "texture":"textures/advancement/popup_display",
    "clips_children":true,
    "controls":[
      {
        "title":{
          "type":"label",
          "anchor_from":"left_middle",
          "anchor_to":"left_middle",
          "color":"$title_command_text_color",
          "text":"#text",
          "layer":1,
          "localize":false,
          "shadow":true,
          "offset":[ "4% + 29px", -5 ],
          "bindings":[
            {
              "binding_name":"#hud_title_text_string",
              "binding_name_override":"#text",
              "binding_type":"global"
            }
          ]
        }
      },
      {
        "subtitle":{
          "type":"label",
          "anchor_from":"left_middle",
          "anchor_to":"left_middle",
          "color":"$title_command_text_color",
          "text":"#subtitle_text",
          "layer":1,
          "localize":false,
          "shadow":true,
          "offset":[ "4% + 29px", 5 ],
          "bindings":[
            {
              "binding_name":"#hud_subtitle_text_string",
              "binding_name_override":"#subtitle_text",
              "binding_type":"global"
            }
          ]
        }
      },
      {
        "hud_advancement_image":{
          "type":"image",
          "texture":"$actionbar_text",
          "layer":1,
          "anchor_from":"left_middle",
          "anchor_to":"left_middle",
          "offset":[ "4%", 0 ],
          "size":[ 25, 24 ]
        }
      }
    ]
  }
  
