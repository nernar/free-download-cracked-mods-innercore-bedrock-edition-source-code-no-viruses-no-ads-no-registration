{
  "toggle_button_control": {
    "type": "panel",
    "layer": 2,
    "controls": [
      {
		"tab_button_icon": {
		  "type": "image",
		  "anchor_from": "left_middle",
		  "anchor_to": "left_middle",
		  "texture": "('textures/advancement/tree/icons/' + $section_topic)",
		  "size": [ 20, 20 ],
		  "offset": [ 10, 0 ],
		  "ignored": "(not $is_advancement)"
		}
      },
      {
        "tab_button_text_aligned_with_icon": {
          "type": "label",
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "size": [ "100% - 16px", 9 ],
          "offset": [ 40, 0 ],
          "text": "('howtoplay.' + $section_topic)",
          "layer": 3,
          "color": "$text_color",
          "alpha": "$content_alpha",
          "ignored": "(not $is_advancement)"
        }
      },
      {
        "tab_button_text_normal": {
          "type": "label",
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "size": [ "100% - 16px", 9 ],
          "offset": [ 20, 0 ],
          "text": "('howtoplay.' + $section_topic)",
          "layer": 3,
          "color": "$text_color",
          "alpha": "$content_alpha",
          "ignored": "$is_advancement"
        }
      }
    ]
  },
  
  "anim_beat_alpha_01": {
    "anim_type": "alpha",
    "easing": "linear",
    "duration": 0.8,
    "from": 1,
    "to": 0.4,
    "next": "@how_to_play_common.anim_beat_alpha_02"
  },
  "anim_beat_alpha_02": {
    "anim_type": "alpha",
    "easing": "linear",
    "duration": 0.2,
    "from": 0.4,
    "to": 1,
    "next": "@how_to_play_common.anim_beat_alpha_01"
  },
  "advancement_container": {
    "type": "stack_panel",
    "orientation": "vertical",
    
    "$advancement_type|default": "task",
    "$use_item_aux|default": false,
    "$is_unlocked|default": false,
    "$is_hidden|default": false,
    "$set_alpha|default": 1.0,
    "variables":[
      {
        "requires": "($is_unlocked and ($advancement_type = 'root'))",
        "$is_unlocked": false
      },
      {
        "requires": "$is_unlocked",
        "$is_hidden": false
      },
      {
        "requires": "($is_hidden and $is_unlocked)",
        "$set_alpha": "@how_to_play_common.anim_beat_alpha_01" 
      }
    ],
    "controls": [
      {
        "spacer": {
          "type": "panel",
          "size": [ "100%", 4 ],
          "ignored": "$is_hidden"
        }
      },
      {
        "main_content@how_to_play_common.advancement_container_content": {
          "ignored": "$is_hidden"
        }
      }
    ]
  },
  "advancement_container_content": {
    "type": "image",
    "size": [ "100%", "100%c - 12px" ],
    "texture": "textures/ui/Banners",
    "clips_children": true,
    "alpha": "$set_alpha",
    "propagate_alpha": true,
    "variables":[
      {
        "requires": "($advancement_type = 'classic')",
        "$border_texture": "textures/advancement/icons/_plain",
        "$display_text_color_unlocked": "$e_color_format"
      },
      {
        "requires": "($advancement_type = 'root')",
        "$border_texture": "textures/advancement/icons/_plain-completed",
        "$display_text_color_unlocked": "$a_color_format"
      },
      {
        "requires": "($advancement_type = 'task')",
        "$border_texture": "textures/advancement/icons/_plain",
        "$display_text_color_unlocked": "$a_color_format"
      },
      {
        "requires": "($advancement_type = 'goal')",
        "$border_texture": "textures/advancement/icons/_oval",
        "$display_text_color_unlocked": "$a_color_format"
      },
      {
        "requires": "($advancement_type = 'challenge')",
        "$border_texture": "textures/advancement/icons/_fancy",
        "$display_text_color_unlocked": "$d_color_format"
      }
    ],
    "controls": [
      {
        "advancement_icon": {
          "type": "image",
          "layer": 1,
          "size": [ 25, 24 ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1%", 4 ],
          "variables": [
            {
              "requires": "$is_unlocked",
              "$border_type": "($border_texture + '-completed')"
            },
            {
              "requires": "(not $is_unlocked)",
              "$border_type": "$border_texture"
            }
          ],
          "texture": "$border_type",
          "controls": [
            {
              "icon_texture_path": {
                "type": "image",
                "layer": 1,
                "size": [ 16, 16 ],
                "texture": "$icon_texture",
                "ignored": "$use_item_aux"
              }
            },
            {
              "item_aux_renderer": {
                "type": "custom",
                "layer": 1,
                "renderer": "inventory_item_renderer",
                "size": [ 16, 16 ],
                "property_bag": { 
                  "#item_id_aux": "$icon_texture" 
                },
                "ignored": "(not $use_item_aux)"
              }
            }
          ]
        }
      },
      {
        "advancement_name": {
          "type": "label",
          "color": "$body_text_color",
          "layer": 1,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1% + 29px", 4 ],
          "size": [ "100%", "default" ],
          "text": "$advancement_name",
          "ignored": "($is_unlocked or $is_hidden)"
        }
      },
      {
        "advancement_name_unlocked": {
          "type": "label",
          "color": "$display_text_color_unlocked",
          "layer": 1,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1% + 29px", 4 ],
          "size": [ "100%", "default" ],
          "text": "$advancement_name",
          "ignored": "(not $is_unlocked)"
        }
      },
      {
        "advancement_description": {
          "type": "label",
          "color": "$7_color_format",
          "layer": 1,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1% + 29px", 16 ],
          "size": [ "85%", "default" ],
          "text": "$advancement_description",
          "localize": true,
          "ignored": "($is_unlocked or $is_hidden)"
        }
      },
      {
        "advancement_description_unlocked": {
          "type": "label",
          "color": "$body_text_color",
          "layer": 1,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1% + 29px", 16 ],
          "size": [ "85%", "default" ],
          "text": "$advancement_description",
          "localize": true,
          "ignored": "(not $is_unlocked)"
        }
      }
    ]
  },
  
  "r4isen_container": {
    "type": "image",
    "size": [ "100%", "100%c - 12px" ],
    "texture": "textures/ui/Banners",
    "clips_children": true,
    "controls": [
      {
        "content_icon": {
          "type": "image",
          "layer": 1,
          "size": [ 25, 24 ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1%", 4 ],
          "texture": "$content_icon_a",
          "controls": [
            {
              "content_icon": {
                "type": "image",
                "layer": 1,
                "size": [ 16, 16 ],
                "texture": "$content_icon_b"
              }
            }
          ]
        }
      },
      {
        "content_title": {
          "type": "label",
          "color": "$body_text_color",
          "layer": 1,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1% + 29px", 4 ],
          "size": [ "100%", "default" ],
          "text": "$header_text"
        }
      },
      {
        "content_description": {
          "type": "label",
          "color": "$7_color_format",
          "layer": 1,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1% + 29px", 16 ],
          "size": [ "85%", "default" ],
          "text": "$paragraph_text",
          "localize": true
        }
      }
    ]
  },

  "advancement_container_anim_uv": {
    "anim_type": "flip_book",
    "initial_uv": [ 0, 0 ],
    "frame_count": 13,
    "frame_step": 245,
    "fps": 16,
    "reversible": false,
    "easing": "linear"
  },
  "r4isen_container_anim_uv_0": {
    "anim_type": "flip_book",
    "initial_uv": [ 0, 0 ],
    "frame_count": 2,
    "frame_step": 25,
    "fps": 1,
    "reversible": false,
    "easing": "linear"
  },
  "r4isen_container_anim_uv_1": {
    "anim_type": "flip_book",
    "initial_uv": [ 0, 0 ],
    "frame_count": 4,
    "frame_step": 25,
    "fps": 2,
    "reversible": false,
    "easing": "linear"
  },
  "r4isen_container_anim_uv_2": {
    "anim_type": "flip_book",
    "initial_uv": [ 0, 0 ],
    "frame_count": 16,
    "frame_step": 16,
    "fps": 10,
    "reversible": true,
    "easing": "linear"
  },
  "r4isen_container_anim_uv_3": {
    "anim_type": "flip_book",
    "initial_uv": [ 0, 0 ],
    "frame_count": 825,
    "frame_step": 32,
    "fps": 16,
    "reversible": true,
    "easing": "linear"
  },

  "r4isen_container_anim_icon": {
    "type": "image",
    "size": [ "100%", "100%c - 12px" ],
    "texture": "textures/ui/Banners",
    "clips_children": true,
    "controls": [
      {
        "content_icon": {
          "type": "image",
          "layer": 1,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "uv": "('@how_to_play_common.r4isen_container_anim_uv_' + $uv_type)",
          "uv_size": "$uv_size",
          "disable_anim_fast_forward": true,
          "size": [ 25, 24 ],
          "offset": [ "1%", 4 ],
          "texture": "$content_icon"
        }
      },
      {
        "content_title": {
          "type": "label",
          "color": "$body_text_color",
          "layer": 1,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1% + 29px", 4 ],
          "size": [ "100%", "default" ],
          "text": "$header_text"
        }
      },
      {
        "content_description": {
          "type": "label",
          "color": "$7_color_format",
          "layer": 1,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1% + 29px", 16 ],
          "size": [ "85%", "default" ],
          "text": "$paragraph_text",
          "font_type": "$description_text_font_type",
          "localize": true
        }
      }
    ]
  },

  "r4isen_container_anim_icon_2": {
    "type": "image",
    "size": [ "100%", "100%c - 12px" ],
    "texture": "textures/ui/Banners",
    "clips_children": true,
    "controls": [
      {
        "content_icon": {
          "type": "image",
          "layer": 1,
          "size": [ 25, 24 ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1%", 4 ],
          "texture": "$content_icon_a",
          "controls": [
            {
              "content_icon": {
                "type": "image",
                "layer": 1,
                "uv": "('@how_to_play_common.r4isen_container_anim_uv_' + $icon_b_uv_type)",
                "uv_size": "$icon_b_uv_size",
                "disable_anim_fast_forward": true,
                "size": [ 16, 16 ], // size must be 32*825
                "texture": "$content_icon_b"
              }
            }
          ]
        }
      },
      {
        "content_title": {
          "type": "label",
          "color": "$body_text_color",
          "layer": 1,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1% + 29px", 4 ],
          "size": [ "100%", "default" ],
          "text": "$header_text"
        }
      },
      {
        "content_description": {
          "type": "label",
          "color": "$7_color_format",
          "layer": 1,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ "1% + 29px", 16 ],
          "size": [ "85%", "default" ],
          "text": "$paragraph_text",
          "font_type": "$description_text_font_type",
          "localize": true
        }
      }
    ]
  }
}