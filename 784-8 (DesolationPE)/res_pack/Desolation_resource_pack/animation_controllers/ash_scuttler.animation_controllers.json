{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.ash_scuttler.move" : {
            "initial_state" : "default",
            "states" : {
                "default" : {
                    "animations" : [
                        {
                            "move" : "query.modified_move_speed"       
                        },
                        "look_at_target"
                    ],
                    "transitions" : [
                        {
                            "attack" : "variable.attack_time > 0"
                        }
                    ]
                },
                "attack" : {
                    "animations" : [ "attack" ],
                    "transitions" : [
                        {
                            "default" : "variable.attack_time == 0"
                        }
                    ]
                }
            }
        }
    }
} 