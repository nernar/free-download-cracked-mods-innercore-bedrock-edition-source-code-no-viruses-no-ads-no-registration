    "events": {
        "become_visible": {
        "remove": {
          "component_groups": [
            "invisible"
          ]
        },
        "add": {
          "component_groups": [
            "visible"
          ]
        }
      },
        "become_invisible": {
        "randomize": [
          {
            "weight": 30,
            "remove": {
                "component_groups": [
                "visible"
              ]
           },
            "add": {
              "component_groups": [
                "invisible"
              ]
            }
          },
          {
            "weight": 70,
            "remove": {
            "component_groups": [
                "visible"
              ]
            },
            "add": {
              "component_groups": [
                "visible"
              ]
            }
          }
        ]
      },
        "minecraft:entity_transformed": {
        "remove": {
        },
        "add": {
          "component_groups": [
            "minecraft:ranged_attack",
            "visible"
          ]
        }
      },
        "minecraft:entity_spawned": {
        "remove": {
        },
        "add": {
          "component_groups": [
            "minecraft:ranged_attack",
            "visible"
          ]
        }
      },
      "ranged_attack": {
        "remove": {
          "component_groups": [
            "minecraft:melee_attack"
          ]
        },
        "add": {
