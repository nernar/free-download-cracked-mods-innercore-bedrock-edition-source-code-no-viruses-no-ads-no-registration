{
  "format_version": "1.10.0",
  "minecraft:entity": {
    "description": {
      "identifier": "ayrtown:crescente",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
        "become_boss": {
        "minecraft:transformation": {
          "into": "ayrtown:boss",
          "delay": 0.5
        }
      },
        "zombie_baby": {
        "minecraft:transformation": {
          "into": "ayrtown:cbaby"
        }
      },
      "zombie_em_crescimento": {
        "minecraft:scale": {
          "value": 1.0
        },
          "minecraft:scale_by_age": {
          "start_scale": 1.0,
          "end_scale": 2.0
        },
        "minecraft:ageable": {
          "duration": 4,
          "grow_up": {
            "event": "crescido",
            "target": "self"
          }
        },
          "minecraft:on_target_escape": {
          "event": "normal",
          "target": "self"
      },
        "minecraft:movement": {
          "value": 0.30
        }
      },

      "zombie_normal": {
        "minecraft:movement": {
          "value": 0.24
        },
          "minecraft:scale": {
          "value": 1.0
        },
         "minecraft:target_nearby_sensor": {
          "inside_range": 5.0,
          "on_inside_range": {
            "event": "crescer",
            "target": "self"
          }
        },

        "minecraft:behavior.mount_pathing": {
          "priority": 2,
          "speed_multiplier": 1.25,
          "target_dist": 0.0,
          "track_target": true
        }
      },

      "zombie_crescido": {
        "minecraft:movement": {
          "value": 0.30
        },
          "minecraft:scale": {
          "value": 2.0
        },
      "minecraft:on_target_escape": {
          "event": "normal",
          "target": "self"
      },
        "minecraft:break_blocks": {
        "breakable_blocks": [
          "bamboo",
          "bamboo_sapling",
          "beetroot",
          "brown_mushroom",
          "carrots",
          "carved_pumpkin",
          "chorus_flower",
          "chorus_plant",
          "deadbush",
          "double_plant",
          "leaves",
          "leaves2",
          "lit_pumpkin",
          "melon_block",
          "melon_stem",
          "potatoes",
          "pumpkin",
          "pumpkin_stem",
          "red_flower",
          "red_mushroom",
          "reeds",
          "sapling",
          "snow_layer",
          "sweet_berry_bush",
          "tallgrass",
          "turtle_egg",
          "vine",
          "waterlily",
          "wheat",
          "yellow_flower",
          "glass",
          "brown_mushroom_block",
          "red_mushroom_block",
          "mushroom_stem",
          "dead_bush",
          "redstone_lamp"
        ]
      },
        "minecraft:behavior.mount_pathing": {
          "priority": 2,
          "speed_multiplier": 1.25,
          "target_dist": 0.0,
          "track_target": true
        }
      },
      "equipamento": {
        "minecraft:equipment": {
          "table": "loot_tables/entities/crescente.json"
        }
      } 
    },

    "components": {
        "minecraft:damage_sensor": {
        "on_damage": {
          "filters": { "test" :  "is_family", "subject" : "other", "value" :  "lightning"},
          "event": "become_boss"
        },
        "deals_damage": false
      },
      "minecraft:nameable": {
      },

      // Zombie Components
      "minecraft:type_family": {
        "family": [ "zombie", "undead", "monster" ]
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.8
      },
      "minecraft:movement.basic": {
      },
      "minecraft:navigation.walk": {
        "is_amphibious": true,
        "can_pass_doors": true,
        "can_walk": true,
        "can_break_doors": true
      },
      "minecraft:annotation.break_door": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:health": {
        "value": 30,
        "max": 30
      },
      "minecraft:breathable": {
        "totalSupply": 15,
        "suffocateTime": 0,
        "breathesAir": true,
        "breathesWater": true
      },
      "minecraft:attack": {
        "damage": 4,
        "effect_name": "weakness",
        "effect_duration": 15
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/zombie.json"
      },
      // Zombie Behaviors
      "minecraft:behavior.melee_attack": {
        "priority": 3,
        "speed_multiplier": 1,
        "track_target": false
      },
      "minecraft:behavior.stomp_turtle_egg": {
        "priority": 4,
        "speed_multiplier": 1,
        "search_range": 10,
        "search_height": 3,
        "goal_radius": 1.14,
        "search_count": 4,
        "interval": 20
      },
      "minecraft:behavior.move_towards_restriction": {
        "priority": 5,
        "speed_multiplier": 1
      },
      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_multiplier": 1
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 6,
        "probability": 0.02
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1,
        "entity_types": {
          "filters": { "test": "is_family", "subject": "other", "operator": "!=", "value": "boss" }
        }
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "within_radius": 25,
        "reselect_targets": true,
        "entity_types": [
          {
            "filters": {
              "any_of": [
                { "test": "is_family", "subject": "other", "value": "player" },
                { "test": "is_family", "subject": "other", "value": "snowgolem" },
                { "test": "is_family", "subject": "other", "value": "irongolem" }
              ]
            },
            "max_dist": 35
          },
          {
            "filters": {
              "any_of": [
                { "test": "is_family", "subject": "other", "value": "villager" },
                { "test": "is_family", "subject": "other", "value": "wandering_trader" }
              ]
            },
            "max_dist": 35,
            "must_see": false
          },
          {
            "filters": {
              "all_of": [
                { "test": "is_family", "subject": "other", "value": "em_crescimento_turtle" },
                { "test": "in_water", "subject": "other", "operator": "!=", "value": true }
              ]
            },
            "max_dist": 35
          }
        ],
        "must_see": true,
        "must_see_forget_duration": 17.0
      },
      "minecraft:physics": {
      }
    },

    "events": {
        "become_boss": {
        "remove": {
        },
        "add": {
          "component_groups": [
            "become_boss"
          ]
        }
      },
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 70,
            "remove": {},
            "add": {
              "component_groups": [
                "zombie_normal",
                "equipamento"
              ]
            }
          },
          {
            "weight": 30,
            "remove": {
            },
            "add": {
              "component_groups": [
                "zombie_baby"
              ]
            }
          }
        ]
      },
      "crescer": {
        "remove": {
          "component_groups": [
            "zombie_normal"
          ]
        },
        "add": {
          "component_groups": [
            "zombie_em_crescimento"
          ]
        }
      },
        "crescido": {
        "remove": {
          "component_groups": [
            "zombie_em_crescimento"
          ]
        },
        "add": {
          "component_groups": [
            "zombie_crescido"
          ]
        }
      },
        "normal": {
        "remove": {
          "component_groups": [
            "zombie_crescido",
            "zombie_em_crescimento"
          ]
        },
        "add": {
          "component_groups": [
            "zombie_normal"
          ]
        }
      },
      "minecraft:convert_to_drowned": {
        "sequence": [
          {
            "filters": {
              "test": "has_component",
              "operator": "!=",
              "value": "minecraft:is_em_crescimento"
            },
            "add": {
              "component_groups": [ "minecraft:convert_to_drowned" ]
            },
            "remove": {
              "component_groups": [ "minecraft:start_drowned_transformation" ]
            }
          },
          {
            "filters": {
              "test": "has_component",
              "value": "minecraft:is_em_crescimento"
            },
            "add": {
              "component_groups": [ "minecraft:convert_to_em_crescimento_drowned" ]
            },
            "remove": {
              "component_groups": [ "minecraft:start_drowned_transformation" ]
            }
          }
        ]
      }
    }
  }
}
